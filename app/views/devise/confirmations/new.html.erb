  <style>
    /* General Reset */
    *,
    *:before,
    *:after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Body Styling */
    body {
      background-color: #080710;
      font-family: 'Poppins', sans-serif;
      color: #ffffff;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .reset-form{
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #080710;
      font-family: 'Poppins', sans-serif;
    }

    /* Title Styling */
    .form-title {
      text-align: center;
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 20px;
    }

    /* Form Container */
    .confirmation-form-container {
      width: 400px;
      padding: 20px;
      background-color: rgba(255, 255, 255, 0.13);
      border-radius: 10px;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 0 20px rgba(8, 7, 16, 0.6);
    }

    /* Form Group */
    .field {
      margin-bottom: 20px;
    }

    .form-label {
      display: block;
      font-size: 14px;
      margin-bottom: 5px;
      color: #ffffff;
    }

    .form-control {
      width: 100%;
      height: 40px;
      background-color: rgba(255, 255, 255, 0.1);
      border: none;
      border-radius: 5px;
      padding: 0 10px;
      font-size: 14px;
      color: #ffffff;
    }

    .form-control::placeholder {
      color: #e5e5e5;
    }

    /* Submit Button */
    .submit-btn {
      width: 100%;
      padding: 10px;
      font-size: 16px;
      font-weight: 600;
      background-color: #ffffff;
      color: #080710;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .submit-btn:hover {
      background-color: #cccccc;
    }

    /* Links Styling */
    .links-container {
      text-align: center;
      margin-top: 20px;
    }

    .links-container a {
      color: #ffffff;
      text-decoration: underline;
      font-size: 14px;
    }
  </style>
  <div class="reset-form">
    <h2 class="form-title">Resend Confirmation Instructions</h2>
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "confirmation-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                           value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                           class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Resend confirmation instructions", class: "btn btn-primary submit-btn" %>
      </div>
    <% end %>

    <div class="links-container">
      <%= render "devise/shared/links" %>
    </div>
  </div>
