<h2 class="text-center my-4">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "password-form" }) do |f| %>
  <div class="alert alert-danger">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group mb-3">
    <%= f.label :password, "New password", class: "form-label" %><br />
    <% if @minimum_password_length %>
      <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= f.submit "Change my password", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>

<style>
  .password-form {
    max-width: 400px;
    margin: 0 auto;
    padding: 2rem;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #f8f9fa;
  }
  .password-form h2 {
    color: #333;
  }
  .password-form .form-label {
    font-weight: bold;
  }
  .password-form .form-control {
    border-radius: 6px;
    padding: 10px;
  }
  .password-form .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }
</style>
