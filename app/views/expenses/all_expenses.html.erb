<style type="text/css">
	/* General Dashboard Styles */
.dashboard-container {
  padding: 20px;
  color: black;
  font-family: 'Arial', sans-serif;
}

.expenses-table {
  margin-top: 40px;
}

.expenses-table h2 {
  font-size: 24px;
  font-weight: bold;
  color: black;
  margin-bottom: 20px;
}

/* Table Styles */
.table {
  width: 100%;
  border-collapse: collapse;
  background-color: white;
  margin-top: 20px;
}

.table th,
.table td {
  padding: 15px;
  text-align: left;
  border: 1px solid #ddd;
  color: black;
}

.table th {
  background-color: #f8f9fa;
  font-weight: bold;
}

.table tbody tr:nth-child(odd) {
  background-color: #f9f9f9;
}

.table tbody tr:hover {
  background-color: #f1f1f1;
}

/* Button Styles */
.btn {
  padding: 6px 12px;
  font-size: 14px;
  border-radius: 4px;
  color: white;
  text-decoration: none;
  transition: background-color 0.3s, transform 0.2s;
}

.btn-sm {
  padding: 5px 10px;
  font-size: 13px;
}

.btn-warning {
  background-color: #ffc107;
}

.btn-warning:hover {
  background-color: #e0a800;
  transform: scale(1.05);
}

.btn-danger {
  background-color: #dc3545;
}

.btn-danger:hover {
  background-color: #c82333;
  transform: scale(1.05);
}

/* Flex Container for Action Buttons */
td[style*="display: flex;"] {
  display: flex;
  gap: 10px;
  justify-content: center;
}

/* No Expenses Message */
p {
  font-size: 16px;
  color: #6c757d;
  font-style: italic;
  text-align: center;
  margin-top: 20px;
}

/* Responsive Styles */
@media screen and (max-width: 768px) {
  .table {
    font-size: 14px;
  }

  .table th, .table td {
    padding: 10px;
  }

  .btn-sm {
    padding: 4px 8px;
    font-size: 12px;
  }
}

</style>

<div class="dashboard-container">
	<div class="expenses-table">
    <h2>All Expenses</h2>
    <% if @expense.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Category</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Mode</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @expense.each do |expense| %>
            <tr>
              <td><%= expense.category %></td>
              <td>â‚¹<%= expense.amount %></td>
              <td><%= expense.date.strftime("%B %d, %Y") %></td>
              <td><%= expense.mode%></td>
              <td style="display: flex; row-gap: 10px; justify-content: flex-start;">
                <%= link_to "Edit", edit_expense_path(expense), class: "btn btn-sm btn-warning" %>
                <%= button_to "Delete", expense_path(expense), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No recent expenses recorded.</p>
    <% end %>
  </div>
</div>