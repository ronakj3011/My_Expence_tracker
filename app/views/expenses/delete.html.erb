<h2>Delete Expense</h2>

<p>Are you sure you want to delete the following expense?</p>

<table class="delete-table">
    <tr>
        <th>Date</th>
        <th>Category</th>
        <th>Amount</th>
        <th>Description</th>
    </tr>
    <tr>
        <td><%= @expense.date.strftime("%Y-%m-%d") %></td>
        <td><%= @expense.category %></td>
        <td><%= number_to_currency(@expense.amount) %></td>
        <td><%= @expense.description %></td>
    </tr>
</table>

<%= form_with(model: @expense, url: expense_path(@expense), method: :delete, local: true, class: "delete-form") do %>
    <div class="form-actions">
        <%= submit_tag "Delete", class: "btn btn-danger" %>
        <%= link_to "Cancel", expenses_path, class: "btn btn-secondary" %>
    </div>
<% end %>

<style>
  h2 {
      color: #d9534f;
      text-align: center;
      margin-top: 20px;
  }

  p {
      text-align: center;
      font-size: 16px;
      color: #555;
      margin-bottom: 20px;
  }

  .delete-table {
      width: 80%;
      margin: 0 auto 20px auto;
      border-collapse: collapse;
      font-family: Arial, sans-serif;
      color: #333;
  }

  .delete-table th,
  .delete-table td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
  }

  .delete-table th {
      background-color: #f8d7da;
      font-weight: bold;
      color: #721c24;
  }

  .delete-table tr:hover {
      background-color: #f5c6cb;
  }

  .delete-form {
      text-align: center;
      margin-top: 20px;
  }

  .form-actions {
      display: flex;
      justify-content: center;
      gap: 10px;
  }

  .btn {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      text-decoration: none;
      font-size: 14px;
      cursor: pointer;
  }

  .btn-danger {
      background-color: #d9534f;
      color: white;
  }

  .btn-danger:hover {
      background-color: #c9302c;
  }

  .btn-secondary {
      background-color: #6c757d;
      color: white;
  }

  .btn-secondary:hover {
      background-color: #5a6268;
  }
</style>
