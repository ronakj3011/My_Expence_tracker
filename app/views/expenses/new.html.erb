<style>
  .header-class{
    margin-top: 20px;
    text-align: center;
  }

  #new-btn{

  }

  table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      font-family: Arial, sans-serif;
      color: #333;
  }

  th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
  }

  th {
      background-color: #f9f9f9;
      font-weight: bold;
  }

  /* Paragraph and link styling */
  p {
      text-align: center;
      margin-top: 10px;
      font-family: Arial, sans-serif;
      color: #555;
  }

  a {
      color: #ff5a5f;
      text-decoration: none;
      transition: color 0.3s ease;
  }

  a:hover {
      color: #ff4247;
  }

  /* Button styling */
  .btn {
      padding: 8px 16px;
      font-size: 14px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      margin: 5px;
  }

  .btn-primary {
      background-color: #007bff;
      color: white;
  }

  .btn-primary:hover {
      background-color: #0056b3;
  }

  .btn-danger {
      background-color: #dc3545;
      color: white;
  }

  .btn-danger:hover {
      background-color: #bd2130;
  }
</style>

<h2 class="header-class">Your Expenses</h2>

<% if @expense.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Mode</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
        <% expense.each do |e| %>
            <tr> <%=e.Title%> </tr>
            <tr> <%=e.Date%></tr>
            <tr> <%=e.Mode%></tr>
            <tr> <%=e.Amount%></tr>
        <% end %>
    </tbody>
<% else %>
    <p> No Expenses </p>
<% end %>
<center><%= button_to 'Add Expence', '#', class: 'btn btn-danger' %></center>